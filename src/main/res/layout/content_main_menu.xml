<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mainmenu2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sisillia.bikebank.MainMenu"
    >

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:layout_height="wrap_content"
            android:layout_width="0dp">

            <TextView
                android:textAlignment="textEnd"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="20dp"
                android:text="Level : "
                />
            <TextView
                android:textAlignment="textStart"
                android:id="@+id/level"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="20dp"
                />
            <TextView
                android:textAlignment="textEnd"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="Point : "/>

            <TextView
                android:textAlignment="textEnd"
                android:id="@+id/poin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="10"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp">

            <TextView
                android:textAlignment="center"
                android:id="@+id/tegangan"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="70dp"
                android:textColor="#fff"
                android:text="0.0"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="90dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#0000"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp">

            <TextView
                android:textAlignment="center"
                android:id="@+id/Rank"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000"
                android:text="Rank: 2 Worldwide" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:background="#1fc3ff"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:layout_width="0dp">
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/ic_heart"/>
            <TextView
                android:textAlignment="center"
                android:id="@+id/textView3"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="22dp"
                android:text="HEART RATE" />

            <TextView
                android:textAlignment="textEnd"
                android:id="@+id/detak"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="0"
                android:textColor="#ed145b"/>

            <TextView
                android:textAlignment="textEnd"
                android:id="@+id/textView5"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="BPM"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="26dp"
        android:layout_marginRight="34dp"
        android:layout_marginLeft="38dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp">

            <TextView
                android:textAlignment="center"
                android:id="@+id/dis1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="0"
                android:textSize="30dp"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/cal1"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="0"
                android:textColor="#fff"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/speed1"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="0"
                android:textColor="#fff"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp">

            <LinearLayout
                android:layout_width="95dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="35dp"
                    android:background="@mipmap/ic_distance"/>
                <TextView
                    android:id="@+id/dis"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textAlignment="textStart"
                    android:textColor="#fff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="19dp"
                    android:background="@mipmap/ic_cal"/>
                <TextView
                    android:textAlignment="textStart"
                    android:id="@+id/cal"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#fff"
                    android:text="Burned Calories" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="8dp"
                    android:background="@mipmap/ic_speed"/>
                <TextView
                    android:textAlignment="textStart"
                    android:id="@+id/speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#fff"
                    android:text="Speed"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="15dp"
        android:gravity="center"
        android:orientation="vertical">


        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />
    </LinearLayout>
</LinearLayout>